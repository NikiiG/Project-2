<%- include('../partials/header') %>
<%- include('../partials/navbar')  %>
<div  class="vh-100 gradient-custom">
    <div class="box-nav d-fles-justify-between"><br>
        <a href="/customers/add" class="border-shadow">
            <span class="text-gradient">New user <i class="fas fa-user"></i></span>
        </a>
    </div><br>
        <table class="table table-hover">
            <thead class ="thead-dark">
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">@Email</th>
                <th scope="col">Street</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip</th>
                <th scope="col">contact</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
            <% for (var i=0;i<users.length ;i++) { %>
              <tr class="table-active">
                <th scope="row"><%= i+1 %></th>
                <td><%= users[i].name%></td>
                <td><%= users[i].email%></td>
                <td><%= users[i].address.street%></td>
                <td><%= users[i].address.city%></td>
                <td><%= users[i].address.state%></td>
                <td><%= users[i].address.zip%></td>
                <td><%= users[i].contact%></td>
                <td><%= users[i].status%></td>
                <td>
                    <a href="/customers/<%= users[i]._id%>/edit" class="btn boder-shadow update">
                    <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                </a>
                <form action="/customers/<%= users[i]._id%>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-primary delete">DELETE</button>
                  <span class="text-gradient"><i class="fa-solid fa-trash-can"></i></span>
                </form>
                <a href="" class="btn boder-shadow delete">
                    
                </a>
                </td>
              </tr>
              <% } %>
            </tbody>
        </table>
  </div>

<%- include('../partials/footer') %>